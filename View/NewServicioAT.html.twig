{% extends "Master/MenuTemplate.html.twig" %}

{% block bodyHeaderOptions %}
    {{ parent() }}
    <div class="container pt-4">
        <div class="row">
            <div class="col">
                <h1 class="h3 mb-0">{{ i18n.trans('new-service') }}</h1>
                <p>{{ i18n.trans('new-service-p') }}</p>
                <ul class="nav nav-tabs">
                    {% if fsc.cliente.exists() %}
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">{{ i18n.trans('customer') }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">{{ i18n.trans('machine') }}</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link active" href="#">{{ i18n.trans('customer') }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">{{ i18n.trans('machine') }}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        {% if fsc.cliente.exists() %}
            <div class="row">
                <div class="col-sm">
                    {{ _self.machineList(fsc, i18n) }}
                    {{ _self.noMachineForm(fsc, i18n) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    <div class="card shadow mt-5 mb-5">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link active" id="findm-tab" data-toggle="tab" href="#findm" role="tab" aria-controls="findm" aria-selected="true">
                                        {{ i18n.trans('search') }}
                                    </a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link" id="newm-tab" data-toggle="tab" href="#newm" role="tab" aria-controls="newm" aria-selected="false">
                                        {{ i18n.trans('new-machine') }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="findm" role="tabpanel" aria-labelledby="findm-tab">
                                    {{ _self.findMachineTab(fsc, i18n) }}
                                </div>
                                <div class="tab-pane fade" id="newm" role="tabpanel" aria-labelledby="newm-tab">
                                    {{ _self.newMachineTab(fsc, i18n) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <form id="formSearchCustomer" method="post">
                <input type="hidden" name="action" value="" />
                <input type="hidden" name="codcliente" value="{{ fsc.cliente.codcliente }}" />
                <div class="row mt-4">
                    <div class="col-sm">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                            <input type="text" name="query" class="form-control" id="customerac" placeholder="{{ i18n.trans('search') }}" autofocus="" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <button type="submit" class="btn btn-primary">
                            {{ i18n.trans('continue') }}
                        </button>
                        &nbsp;
                        <a href="{{ fsc.getNewCustomerUrl() }}" class="btn btn-success">
                            {{ i18n.trans('new-customer') }}
                        </a>
                    </div>
                </div>
            </form>
        {% endif %}
    </div>
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .bg-header {
            background-color: #FAFBFC;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#customerac").autocomplete({
                source: function (request, response) {
                    var formData = {};
                    var rawForm = $("form[id=formSearchCustomer]").serializeArray();
                    $.each(rawForm, function (i, input) {
                        formData[input.name] = input.value;
                    });
                    formData["action"] = "autocomplete-customer";
                    console.log(formData);
                    $.ajax({
                        method: "POST",
                        url: "NewServicioAT",
                        data: formData,
                        dataType: "json",
                        success: function (results) {
                            var values = [];
                            results.forEach(function (element) {
                                if (element.key === null || element.key === element.value) {
                                    values.push(element);
                                } else {
                                    values.push({key: element.key, value: element.key + " | " + element.value});
                                }
                            });
                            response(values);
                        },
                        error: function (msg) {
                            alert(msg.status + " " + msg.responseText);
                        }
                    });
                },
                select: function (event, ui) {
                    if (ui.item.key !== null) {
                        $("form[id=formSearchCustomer] input[name=codcliente]").val(ui.item.key);
                        var value = ui.item.value.split(" | ");
                        if (value.length > 1) {
                            ui.item.value = value[1];
                        } else {
                            ui.item.value = value[0];
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}

{% macro findMachineTab(fsc, i18n) %}
    <div class="row">
        <div class="col-sm">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
                <input type="text" name="query" class="form-control" id="customerac" placeholder="{{ i18n.trans('search') }}" autofocus="" />
            </div>
        </div>
        <div class="col-sm">
            <button type="submit" class="btn btn-primary">
                {{ i18n.trans('continue') }}
            </button>
        </div>
    </div>
{% endmacro %}

{% macro machineList(fsc, i18n) %}
    <form method="post">
        <input type="hidden" name="action" value="machine" />
        <input type="hidden" name="codcliente" value="{{ fsc.cliente.codcliente }}" />
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>{{ i18n.trans('select') }}</th>
                        <th>{{ i18n.trans('name') }}</th>
                        <th>{{ i18n.trans('serial-number') }}</th>
                        <th>{{ i18n.trans('reference') }}</th>
                        <th>{{ i18n.trans('manufacturer') }}</th>
                        <th class="text-right">{{ i18n.trans('date') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for machine in fsc.maquinas %}
                        <tr>
                            <td>
                                <button type="submit" name="idmaquina" value="{{ machine.idmaquina }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-play"></i>
                                </button>
                            </td>
                            <td>{{ machine.nombre }}</td>
                            <td>{{ machine.numserie }}</td>
                            <td>{{ machine.reference }}</td>
                            <td>{{ machine.getFabricante().nombre }}</td>
                            <td class="text-right">{{ machine.fecha }}</td>
                        </tr>
                    {% else %}
                        <tr class="table-warning">
                            <td>{{ i18n.trans('customer-has-no-machines') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
{% endmacro %}

{% macro newMachineTab(fsc, i18n) %}

{% endmacro %}

{% macro noMachineForm(fsc, i18n) %}
    <form method="post">
        <input type="hidden" name="action" value="no-machine" />
        <input type="hidden" name="codcliente" value="{{ fsc.cliente.codcliente }}" />
        <button type="submit" class="btn btn-secondary">
            {{ i18n.trans('no-machine') }}
        </button>
    </form>
{% endmacro %}